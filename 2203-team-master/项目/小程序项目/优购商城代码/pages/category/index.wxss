/* pages/category/index.wxss */
.cates{
  height: 100%;
}
/* 搜索区域 */
 .index_search{
  width: 100%;
  height: 90rpx;
  background-color: #eb4450;
  display: flex;
  justify-content: center;
  align-items: center;
}
.index_search input{
  width: 731rpx;
  height: 70rpx;
  background-color: white;
  border-radius: 15rpx;
  text-align: center;
}
/* 内容区 */
.cates .cates_container{
   width: 100%;
   height:calc(100vh - 90rpx);
   /* background-color: pink; */
   display: flex;
}

.cates .cates_container .left_menu{
    flex:2;
   background-color: blue;
    
}
.cates .cates_container .left_menu .menu_item{
      
       /* line-height: 80rpx;
