<view class="search_row">
 
  <input model:value="{{inpValue}}" placeholder="请输入您要搜索的商品" bindinput="handleInput" > </input>
  <!-- <view>{{inpValue}}</view> -->
  <button bindtap="handleCancel" >取消</button>
</view>
<view class="search_content">
  <navigator url="/pages/goods_detail/index?goods_id={{item.goods_id}}" class="search_item" wx:for="{{goods}}">
    {{item.goods_name}}
  </navigator>
</view> 