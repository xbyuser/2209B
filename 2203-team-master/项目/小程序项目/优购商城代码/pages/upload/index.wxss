.box {
  background-color: rgb(246, 246, 246);
  width: 100%;
  min-height: 1200rpx;
}

.title {
  padding: 0 20rpx;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.title view {
  width: 30%;
  background: white;
  text-align: center;
  padding: 10rpx 0;
  box-sizing: border-box;
  margin: 20rpx 0;
  font-size: 26rpx;
}

.content {
  background-color: #fff;
  margin: 20rpx;
  padding: 10rpx;
  width: 710rpx;
  box-sizing: border-box;

}
.act {
  color: red;
  font-weight: bold;
}
.add {
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 30rpx;
}

.add button {
  margin: 0;
  width: 90rpx;
  height: 90rpx;
  font-size: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  margin-top: 20rpx;
  color: #ccc;
}

.imgs {
  margin-top: 20rpx;
  margin-left: 20rpx;
  width: 90rpx;
  height: 90rpx;
  position: relative;
}

.imgs image {
  width: 100%;
  height: 100%;
  border-radius: 15rpx;

}

.imgs icon {
  position: absolute;
  top: -22rpx;
  right: -22rpx;

}

.hbox {
  min-height: 1110rpx;
  background-color: white;
}

.history {
  width: 100%;
  background-color: white;
  border-bottom: 1px solid #000;
  padding: 20rpx;
  box-sizing: border-box;
}

.history .text {
  line-height: 60rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.history .img{
  line-height: 130rpx;
  width: 100%;
  display: flex;
}
.imgs{
  text-align: right;
}
.img image{
  width: 100rpx;
  height: 100rpx;
}